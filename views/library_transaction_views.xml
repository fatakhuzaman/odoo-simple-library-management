<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="library_transaction_view_tree" model="ir.ui.view">
        <field name="name">library.transaction.view.tree</field>
        <field name="model">library.transaction</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="book_id" />
                <strong>
                    <field name="status" widget="label_selection" options="{'classes': {'borrowed': 'info', 'lost': 'danger', 'returned': 'success'}}"/>
                </strong>
                <field name="borrow_date" />
                <field name="return_date" />
                <field name="lost_date" />
                <button name="action_return" type="object" icon="fa-check" string="Return" />
                <button name="action_lost" type="object" icon="fa-times" string="Lost" />
            </tree>
        </field>
    </record>

    <record id="library_transaction_view_form" model="ir.ui.view">
        <field name="name">library.transaction.view.form</field>
        <field name="model">library.transaction</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="book_id" />
                        <field name="status" readonly="1" />
                        <field name="description" />
                    </group>
                    <group>
                        <field name="borrow_date" readonly="1" />
                        <field name="return_date" readonly="1" />
                        <field name="lost_date" readonly="1" />
                    </group>
                    <header>
                        <button string="Return" name="action_return" type="object" class="btn-success mt-4" />
                        <button string="Lost" name="action_lost" type="object" class="btn-danger mt-4" />
                    </header>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_transaction" model="ir.actions.act_window">
        <field name="name">Transactions</field>
        <field name="res_model">library.transaction</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="library_transaction"
        name="Transactions"
        action="action_library_transaction"
        parent="library_management" />

</odoo>
