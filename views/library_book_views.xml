<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">library.book.view.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="author" />
                <field name="pages" />
                <field name="amount" decoration-info="amount>0" />
                <field name="available" decoration-success="available>0" />
                <field name="borrowed" decoration-warning="borrowed>0" />
                <field name="lost" decoration-danger="lost>0" />
            </tree>
        </field>
    </record>

    <record id="library_book_view_kanban" model="ir.ui.view">
        <field name="name">library.book.view.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_books">
                <field name="name" />
                <field name="author" />
                <field name="pages" />
                <field name="amount" />
                <field name="available" />
                <field name="borrowed" />
                <field name="lost" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_primary_left">
                                <i class="fa fa-book text-primary me-2"></i> 
                                <strong><field name="name" /></strong>
                            </div>
                            <div class="o_kanban_details mt8">
                                <div>
                                    <i class="fa fa-user text-muted me-2"></i> 
                                    <span><field name="author" /></span>
                                </div>
                                <div>
                                    <i class="fa fa-list-ol text-muted me-2"></i> 
                                    <span><field name="pages" /> pages</span>
                                </div>
                                <div>
                                    <i class="fa fa-file-text text-muted me-2"></i> 
                                    <span><field name="amount" /> qty</span>
                                </div>
                            </div>
                            <div class="o_kanban_footer mt8">
                                <t t-if="record.available.raw_value > '0'">
                                    <span class="badge badge-success">
                                        <i class="fa fa-check me-1"></i> Available
                                    </span>
                                </t>
                                <t t-if="record.available.raw_value == '0'">
                                    <span class="badge badge-warning">
                                        <i class="fa fa-clock-o me-1"></i> Out of Stock
                                    </span>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">library.book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="author" />
                        <field name="pages" />
                        <field name="amount" decoration-info="amount>0" />
                        <field name="available" decoration-success="available>0" />
                        <field name="borrowed" readonly="1" decoration-warning="borrowed>0" />
                        <field name="lost" readonly="1" decoration-danger="lost>0" />
                    </group>
                    <notebook>
                        <page string="Transactions">
                            <field name="borrower_ids" readonly="1">
                                <tree editable="false">
                                    <field name="name"/>
                                    <field name="borrow_date"/>
                                    <field name="return_date"/>
                                    <field name="lost_date" />
                                    <strong>
                                        <field name="status" widget="label_selection" options="{'classes': {'borrowed': 'info', 'lost': 'danger', 'returned': 'success'}}"/>
                                    </strong>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="library_management" name="Library" />
    
    <menuitem id="library_book" name="Books" action="action_library_book" parent="library_management" />

</odoo>
